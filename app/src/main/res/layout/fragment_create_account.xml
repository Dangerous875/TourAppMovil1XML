<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05477C"
    android:backgroundTint="#05477C"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:background="@drawable/style_bord_textview3"
        android:fontFamily="@font/home_alone"
        android:gravity="center"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:background="@drawable/style_bord_textview"
        android:textColorHint="@color/white"
        android:ems="10"
        android:fontFamily="@font/home_alone"
        android:hint="@string/confirmar_password"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.690"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:background="@drawable/style_bord_textview"
        android:textColorHint="@color/white"
        android:ems="10"
        android:fontFamily="@font/home_alone"
        android:hint="@string/ingrese_password"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.580"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:background="@drawable/style_bord_textview"
        android:textColorHint="@color/white"
        android:ems="10"
        android:fontFamily="@font/home_alone"
        android:hint="@string/ingrese_surname"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.470"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/name"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:background="@drawable/style_bord_textview"

        android:textColorHint="@color/white"
        android:ems="10"
        android:fontFamily="@font/home_alone"
        android:hint="@string/ingrese_name"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.360"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:background="@drawable/style_bord_textview"
        android:ems="10"
        android:fontFamily="@font/home_alone"
        android:hint="@string/ingrese_nickname"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.250"
        tools:visibility="visible"
        android:autofillHints="" />

    <Button
        android:id="@+id/Register"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:background="@drawable/style_bord_textview3"
        android:fontFamily="@font/home_alone"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <ImageView
        android:id="@+id/iv_perfilusuario"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/perfilusuario"
        tools:srcCompat="@drawable/perfilusuario"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>